{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/master",
  "tasks": {
    "prepublish": {
      "dependsOn": ["^prepublish"],
      "outputs": ["lib/**", "es/**", "dist/**", "typings/**", ".svelte-kit/**"]
    },
    "test": {
      "dependsOn": ["^prepublish"]
    },
    "test:watch": {
      "persistent": true
    },
    "test:update": {},
    "dev": {
      "dependsOn": ["^prepublish"],
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "check-types": {
      "dependsOn": ["^prepublish"]
    }
  }
}
